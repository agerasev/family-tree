{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "target": "es2016",
    "lib": [
      "es2016",
      "dom"
    ],
    "allowJs": true,
    
    "baseUrl": "src",
    "outDir": "build",

    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "exclude": [
    "node_modules",
    "build",
    "build.js",
    "output",
  ],
}
